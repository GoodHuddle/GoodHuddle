{{#extend "admin/admin-account-layout"}}

    {{#replace "content"}}
        <h1 class="form-header">Reset password for {{member.displayName}}</h1>

        <!-- Form -->
        <form action="/admin/reset" method="post" class="panel">

            <div class="form-lead-text">Enter a new password for your account</div>

            <input type="hidden" name="resetCode" value="{{resetCode}}"/>

            <div class="form-group signin-password {{errorClass 'password'}}">
                <input type="password" name="password" class="form-control input-lg" placeholder="New password"/>
                {{errorMessage "password"}}
            </div>

            <div class="form-group signin-password {{errorClass 'confirmPassword'}}">
                <input type="password" name="confirmPassword" class="form-control input-lg" placeholder="Confirm new password"/>
                {{errorMessage "confirmPassword"}}
            </div>

            <div class="form-actions">
                <input type="submit" value="Change password" class="btn btn-primary btn-block btn-lg"/>
            </div>
        </form>
    {{/replace}}

{{/extend}}