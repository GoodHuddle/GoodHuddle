{{#extend "admin/admin-account-layout"}}

    {{#replace "content"}}

        <h1 class="form-header">Forgot password</h1>

        <!-- Form -->
        <form action="/admin/forgot" method="post" class="panel">

            <div class="form-lead-text">Please provide the email address you used to register your account</div>

            <div class="form-group {{errorClass 'email'}}">
                <input type="text" name="email" class="form-control input-lg" placeholder="Email address" value="{{request.email}}"/>
                {{errorMessage "email"}}
            </div>

            <div class="form-actions">
                <input type="submit" value="Reset password" class="btn btn-primary btn-block btn-lg"/><br/>
                <a href="/admin/login">Back to login page</a>
            </div>

        </form>

    {{/replace}}

{{/extend}}